<?xml version="1.0" encoding="utf-8"?>
<ja.burhanrashid52.photoeditor.GraphicView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:background="#80000000">

    <ja.burhanrashid52.photoeditor.BorderView
        android:id="@+id/frmBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/border_margin"
        android:background="@drawable/rounded_border_tv"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvPhotoEditorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:text="Burhanuddin"
            tools:textColor="@android:color/black" />
    </ja.burhanrashid52.photoeditor.BorderView>

    <ja.burhanrashid52.photoeditor.HandleView
        android:id="@+id/imgHandleTopLeft"
        android:layout_width="@dimen/handle_size"
        android:layout_height="@dimen/handle_size"
        android:layout_gravity="top|start"
        android:src="@drawable/ic_zoom_reverse" />

    <ja.burhanrashid52.photoeditor.HandleView
        android:id="@+id/imgHandleTopRight"
        android:layout_width="@dimen/handle_size"
        android:layout_height="@dimen/handle_size"
        android:layout_gravity="top|end"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_zoom_forward" />

    <ja.burhanrashid52.photoeditor.HandleView
        android:id="@+id/imgHandleBottomRight"
        android:layout_width="@dimen/handle_size"
        android:layout_height="@dimen/handle_size"
        android:layout_gravity="bottom|end"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_zoom_reverse" />

    <ja.burhanrashid52.photoeditor.HandleView
        android:id="@+id/imgHandleBottomLeft"
        android:layout_width="@dimen/handle_size"
        android:layout_height="@dimen/handle_size"
        android:layout_gravity="bottom|start"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_zoom_forward" />

</ja.burhanrashid52.photoeditor.GraphicView>
